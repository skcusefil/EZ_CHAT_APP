<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://xamarin.com/schemas/2014/forms"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="clientXamarin.Views.MainContentView.EditNamePage">
    <ContentPage.Content>
        <StackLayout>
            <StackLayout Grid.Row="2" Padding="10">

                <Label Text="Display name" FontSize="Medium" TextColor="#2323A5" />
                <Entry x:Name="displayName" Text="{Binding DisplayName}" FontSize="Small" TextColor="#6565E1"/>
                <BoxView HeightRequest="1" BackgroundColor="#AEAEDF" />

            </StackLayout>
            <Button Text="Save" BackgroundColor="#2323A5" TextColor="#AEAEDF" Command="{Binding SaveCommand}" />
        </StackLayout>
    </ContentPage.Content>
</ContentPage>