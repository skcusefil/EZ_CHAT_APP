<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://xamarin.com/schemas/2014/forms"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="clientXamarin.Views.MainContentView.ChatMainPage">
    
    <ContentPage.ToolbarItems>
        <ToolbarItem Text="Add friends" Command="{Binding SearchFriendCommand}" />
    </ContentPage.ToolbarItems>
    
    <ContentPage.Content>
        <StackLayout >
            <Grid>
                <Grid.RowDefinitions>
                    <RowDefinition Height="25*" />
                    <RowDefinition Height="Auto" />
                </Grid.RowDefinitions>
                <StackLayout Grid.Row="0" HorizontalOptions="Center" VerticalOptions="Center">
                    <SearchBar Placeholder="search friend from list..." />
                </StackLayout>

                <StackLayout Grid.Row="1" HorizontalOptions="Center" VerticalOptions="Center" >
                    <Label Text="Here friend list" />
                </StackLayout>
            </Grid>
        </StackLayout>
    </ContentPage.Content>
</ContentPage>