<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://xamarin.com/schemas/2014/forms"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="clientXamarin.Views.MainPage">
    <ContentPage.Content>
        <Grid>
            <Grid.RowDefinitions>
                <RowDefinition Height="50*" />
                <RowDefinition Height="50*" />
            </Grid.RowDefinitions>
            <StackLayout Grid.Row="0" VerticalOptions="Center" HorizontalOptions="Center" >
                <Label Text="Welcom to My EZ CHAT app!" FontSize="Large" TextColor="#5634A0" />
            </StackLayout>
            <StackLayout Grid.Row="1" Orientation="Vertical" HorizontalOptions="Center" >
                <Button Text="Login" 
                        Command="{Binding LoginCommand}"
                        BackgroundColor="#6FB0D7"  
                        CornerRadius="10"/>
                <Button Command="{Binding RegisterCommand}"
                        Text="Register" 
                        BackgroundColor="#E9A9D4" 
                        CornerRadius="10"/>
            </StackLayout>
        </Grid>
    </ContentPage.Content>
</ContentPage>